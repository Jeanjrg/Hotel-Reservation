<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800" style="-fx-background-color: #ffffff;">
    <!-- Top Navigation Bar -->
    <HBox spacing="20" padding="16" style="-fx-background-color: #ffffff; -fx-border-color: transparent; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" >
        <!-- Logo -->
        <Label text="HotelReserve" style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #111827;" />
        <Pane HBox.hgrow="ALWAYS"/>
        <!-- Navigation Items -->
        <HBox spacing="24" alignment="CENTER_RIGHT">
            <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-size: 16px;" 
                    onMouseEntered="#hoverEnter" onMouseExited="#hoverExit" />
            <Button text="Reservations" style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-size: 16px;" 
                    onMouseEntered="#hoverEnter" onMouseExited="#hoverExit" />
            <Button text="Rooms" style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-size: 16px;" 
                    onMouseEntered="#hoverEnter" onMouseExited="#hoverExit" />
            <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-size: 16px;" 
                    onMouseEntered="#hoverEnter" onMouseExited="#hoverExit" />
        </HBox>
    </HBox>

    <!-- Main Content VBox -->
    <VBox spacing="40" padding="40" AnchorPane.topAnchor="72" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="40">

        <!-- Hero Section -->
        <VBox spacing="12" style="-fx-padding: 0 20;">
            <Label text="Manage Your Hotel Reservations Seamlessly" 
                   style="-fx-font-size: 48px; -fx-font-weight: 800; -fx-text-fill: #111827;" wrapText="true"/>
            <Label text="A clean and efficient dashboard to keep your bookings under control and your guests happy." 
                   style="-fx-font-size: 18px; -fx-text-fill: #6b7280;" wrapText="true" />
            <Button text="Create New Reservation" 
                    style="-fx-background-color: #111827; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: 600; -fx-padding: 14 28; -fx-background-radius: 12;"
                    onMouseEntered="#buttonHoverEnter" onMouseExited="#buttonHoverExit" />
        </VBox>

        <!-- Metrics Cards Section -->
        <HBox spacing="24" alignment="CENTER">
            <VBox spacing="8" alignment="CENTER" style="-fx-background-color: #f9fafb; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10,0,0,2); -fx-pref-width: 280;">
                <Label text="Total Reservations" style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" />
                <Label text="1,248" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #111827;" />
            </VBox>
            <VBox spacing="8" alignment="CENTER" style="-fx-background-color: #f9fafb; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10,0,0,2); -fx-pref-width: 280;">
                <Label text="Rooms Available" style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" />
                <Label text="85" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #111827;" />
            </VBox>
            <VBox spacing="8" alignment="CENTER" style="-fx-background-color: #f9fafb; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10,0,0,2); -fx-pref-width: 280;">
                <Label text="Guests Today" style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" />
                <Label text="132" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #111827;" />
            </VBox>
        </HBox>

        <!-- Recent Reservations Table Section -->
        <VBox spacing="16" style="-fx-padding: 0 20;">
            <Label text="Recent Reservations" style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #111827;" />
            <TableView prefHeight="300" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <columns>
                    <TableColumn text="Guest Name" prefWidth="200" />
                    <TableColumn text="Room Number" prefWidth="120" />
                    <TableColumn text="Check-in Date" prefWidth="160" />
                    <TableColumn text="Check-out Date" prefWidth="160" />
                    <TableColumn text="Status" prefWidth="140" />
                </columns>
            </TableView>
        </VBox>
    </VBox>

</AnchorPane>
