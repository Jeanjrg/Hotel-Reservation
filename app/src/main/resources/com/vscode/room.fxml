<AnchorPane prefHeight="827.0" prefWidth="1281.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vscode.RoomController">

    <!-- Header (copy dari home.fxml, tetap ada di atas) -->
    <HBox alignment="CENTER" opacity="0.92" prefHeight="82.0" prefWidth="1280.0" spacing="30.0" style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.85);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-text-fill: #fffb00; -fx-font-size: 26px; -fx-font-weight: bold;" text="Transylvania Hotel" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#switchToHome" style="-fx-background-color: none;" text="Home" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToAbout" style="-fx-background-color: none;" text="About" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToContactUs" style="-fx-background-color: none;" text="Contact Us" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="userNameLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="578.0" style="-fx-text-fill: #fffb00; -fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome, Name!" />
    </HBox>

    <!-- Konten utama -->
    <VBox alignment="CENTER" layoutX="0.0" layoutY="82.0" prefHeight="75.0" prefWidth="1145.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="136.0" AnchorPane.topAnchor="82.0">
      <children>
           <Label fx:id="roomType" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Standard Room" />
      </children>
    </VBox>

     <!-- Pilih kamar, checkin, checkout, payment -->
     <HBox alignment="CENTER" layoutX="405.0" layoutY="597.0" spacing="40.0" style="-fx-padding: 20;">
         <!-- Pilih kamar -->
         <VBox alignment="CENTER" spacing="10.0">
             <Label style="-fx-font-weight: bold;" text="Pilih Nomor Kamar:">
            <font>
               <Font size="16.0" />
            </font></Label>
         <ComboBox fx:id="roomComboBox" prefHeight="44.0" prefWidth="95.0" style="-fx-background-color: none; -fx-border-color: black;" />
         </VBox>
         <!-- Check-in/out dan payment -->
         <VBox alignment="CENTER" spacing="10.0">
             <HBox alignment="CENTER" spacing="10.0">
                 <Label text="Check-in:" />
                 <DatePicker fx:id="checkInPicker" promptText="dd/mm/yyyy" />
             </HBox>
             <HBox alignment="CENTER" spacing="10.0">
                 <Label text="Check-out:" />
                 <DatePicker fx:id="checkOutPicker" promptText="dd/mm/yyyy" />
             </HBox>
             <Button fx:id="paymentButton" onAction="#handlePayment" prefWidth="120.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Payment" />
         </VBox>
     </HBox>
   <ImageView fx:id="roomImageView" fitHeight="450.0" fitWidth="850.0" layoutX="281.0" layoutY="156.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/StandardRoomView.jpg" />
      </image></ImageView>

     <!-- Fasilitas -->
     <VBox alignment="CENTER" layoutX="14.0" layoutY="170.0" prefHeight="443.0" prefWidth="273.0" spacing="5.0">
         <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Fasilitas:" />
         <Label fx:id="bedType" text="• 1 Queen Bed">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label text="• AC">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label text="• TV">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label text="• WiFi">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label fx:id="bathUp" text="• Kamar mandi dalam">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label fx:id="hotWater" text="• Air panas">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
         <Label text="• Sarapan gratis">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
     </VBox>
   <GridPane alignment="CENTER" layoutX="1150.0" layoutY="85.0" prefHeight="746.0" prefWidth="126.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <ImageView accessibleRole="BUTTON" fitHeight="112.0" fitWidth="126.0">
            <image>
               <Image url="@images/Desain%20tanpa%20judul.png" />
            </image>
         </ImageView>
         <ImageView accessibleRole="BUTTON" fitHeight="112.0" fitWidth="126.0" GridPane.rowIndex="1">
            <image>
               <Image url="@images/SuperiorRoom.png" />
            </image>
         </ImageView>
         <ImageView accessibleRole="BUTTON" fitHeight="112.0" fitWidth="126.0" GridPane.rowIndex="2">
            <image>
               <Image url="@images/DeluxeRoom.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="112.0" fitWidth="126.0" GridPane.rowIndex="3">
            <image>
               <Image url="@images/JuniorSuite.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="112.0" fitWidth="126.0" GridPane.rowIndex="5">
            <image>
               <Image url="@images/PresidentialSuite.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="112.0" fitWidth="126.0" layoutX="10.0" layoutY="638.0" GridPane.rowIndex="4">
            <image>
               <Image url="@images/Suite.png" />
            </image>
         </ImageView>
         <Button onAction="#switchToStandard" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="0" />
         <Button onAction="#switchToSuperior" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="1" />
         <Button onAction="#switchToDeluxe" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="2" />
         <Button onAction="#switchToJuniorSuite" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="3" />
         <Button onAction="#switchToSuite" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="4" />
         <Button onAction="#switchToPresidential" prefHeight="114.0" prefWidth="142.0" style="-fx-background-color: none;" GridPane.rowIndex="5" />
      </children>
   </GridPane>
</AnchorPane>
